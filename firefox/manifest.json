{
	"manifest_version": 2,
	"name": "Simon",
	"version": "1.0",
	"description": "Test your memory skills with this classic memory game!",

	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},

	"browser_action": {
		"default_icon": "icons/icon-32.png",
		"default_title": "Simon",
	},
	
	"background": {
		"scripts": [ "background.js" ]
	},

	"permissions": ["storage"]
}